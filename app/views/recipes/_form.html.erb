<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe) do |f| %>
      <div class="row mb-3">
        <%= f.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-12">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name of recipe', autofocus: true %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :description, class: 'col-sm-2 col-form-label' %>
        <div class="col-md-12">
          <%= f.rich_text_area :description,rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-offset-2 col-md-12">
          <%= f.submit class: 'btn btn-primary btn-lg btn-xlarge' %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 color-match">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>